{
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "isShellCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "buildCSS",
            "command": "scss",
            "args": [
                "--watch",
                "./css/app.scss:./css/app.css"
            ],
            "isShellCommand": true,
            "showOutput": "always",
            "suppressTaskName": false
        }
    ]
}